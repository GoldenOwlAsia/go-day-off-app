{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "max-len": [
      "error",
      { "code": 120 },
      { "tabWidth": 2 },
      { "ignoreComments": true },
      { "ignoreTrailingComments": true },
      { "ignoreUrls": true },
      { "ignoreStrings": true }
    ]
  }
}
